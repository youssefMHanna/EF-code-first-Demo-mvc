@model IEnumerable<Day9.Models.DepartmentCourse>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { CourseId = item.CourseId ,DepartmentId = item.DepartmentId  }) |
                @Html.ActionLink("Details", "Details", new { CourseId = item.CourseId ,DepartmentId = item.DepartmentId }) |
                @Html.ActionLink("Delete", "Delete", new { CourseId = item.CourseId ,DepartmentId = item.DepartmentId  })
            </td>
        </tr>
}
    </tbody>
</table>
